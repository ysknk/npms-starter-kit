{
  "name": "npms-starter-kit",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run dev",
    "dev": "npm run watch",
    "generate": "npm run production:build --silent",
    "serv": "browser-sync start --config bs-config.js",
    "imagemin-cli": "node .cli/imagemin.js -b \"src/images/\" -d \"./dist/\"",
    "iconv-cli": "node .cli/iconv.js -d \"./dist/\"",
    "stylus-cli": "node .cli/stylus.js -b \"src/styles/\" -d \"./dist/\"",
    "encode": "run-p encode:* --silent",
    "encode:templates": "npm run iconv-cli -- -b \"src/templates/\" -s \"**/[!_]*.pug\" -e \".html\"",
    "encode:styles": "npm run iconv-cli -- -b \"src/styles/\" -s \"**/[!_]*.pcss\" -e \".css\"",
    "encode:stylus": "npm run iconv-cli -- -b \"src/styles/\" -s \"**/[!_]*.styl\" -e \".css\"",
    "encode:scripts": "npm run iconv-cli -- -b \"src/scripts/\" -s \"**/[!_]*.*\" -e \".js\"",
    "clean": "run-p clean:* --silent",
    "clean:templates": "del -cwd \"src/templates/\" -s \"**/[!_]*.pug\" -e \".html\"",
    "clean:styles": "del -cwd \"src/styles/\" -s \"**/[!_]*.pcss\" -e \".css\"",
    "clean:stylus": "del -cwd \"src/styles/\" -s \"**/[!_]*.styl\" -e \".css\"",
    "clean:scripts": "del -cwd \"src/scripts/\" -s \"**/[!_]*.*\" -e \".js\"",
    "clean:images": "del -cwd \"src/images/\" -s \"**/[!_]*.*\"",
    "clean:statics": "del -cwd \"src/statics/\" -s \"**/[!_]*.*\"",
    "build": "run-p build:* --silent",
    "build:templates": "pug -O .pugrc.js \"src/templates\" -o \"./dist/\" -E html",
    "build:styles": "postcss \"src/styles/**/[!_]*.pcss\" --base \"./src/styles/\" --dir \"./dist/\" --ext css --verbose",
    "build:stylus": "npm run stylus-cli -- -s \"**/[!_]*.styl\"",
    "build:scripts": "webpack",
    "build:images": "npm run imagemin-cli -- -s \"src/images/**/[!_]*.{jpg,png,gif,svg}\"",
    "build:statics": "cpx \"src/statics/**/[!_]*\" \"./dist/\" -v",
    "watch": "run-p serv watch:*  --silent",
    "watch:templates": "npm run build:templates -- -w",
    "watch:styles": "chokidar \"src/styles/**/*\" -c \"if [[ '{event}' =~ add||change ]]; then npm run build:styles; fi;\"",
    "watch:stylus": "chokidar \"src/styles/**/*\" -c \"if [[ '{event}' =~ add||change ]]; then  npm run build:stylus; fi;\"",
    "watch:scripts": "chokidar \"src/scripts/**/*\" -c \"if [[ '{event}' =~ add||change ]]; then npm run build:scripts; fi;\"",
    "watch:images": "chokidar \"src/images/**/*\" -c \"if [[ '{event}' =~ add||change ]]; then npm run imagemin-cli -- -s {path}; fi;\"",
    "watch:statics": "npm run build:statics -- -w --no-initial",
    "lint": "run-s lint:* --silent",
    "lint:templates": "htmlhint --config .htmlhintrc.js \"./dist/**/*.html\"",
    "lint:styles": "stylelint --config .stylelintrc.js \"./dist/**/*.css\" -f verbose --aei --color",
    "lint:scripts": "eslint -c .eslintrc.js \"./src/scripts/**/*\"",
    "production:build": "cross-env NODE_ENV=production npm run build --silent && npm run lint --silent",
    "development:build": "cross-env NODE_ENV=development npm run build --silent",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "keywords": [
    "npm-scripts"
  ],
  "author": "ysknk",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@storybook/addon-actions": "^6.5.14",
    "@storybook/addon-controls": "^6.5.14",
    "@storybook/addon-essentials": "^6.5.14",
    "@storybook/addon-links": "^6.5.14",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.14",
    "@storybook/html": "^6.5.14",
    "@storybook/manager-webpack5": "^6.5.14",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "browser-sync": "^2.27.10",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "core-js": "^3.26.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.2",
    "del-cli": "github:ysknk/del-cli",
    "dotenv": "^16.0.3",
    "eslint": "^8.29.0",
    "glob": "^8.0.3",
    "htmlhint": "^1.1.4",
    "iconv-lite": "^0.6.3",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "nib": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "postcss-csso": "^6.0.1",
    "postcss-easy-import": "^4.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-functions": "^4.0.2",
    "postcss-loader": "^7.0.2",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^7.8.3",
    "postcss-simple-vars": "^7.0.1",
    "process": "^0.11.10",
    "pug": "^3.0.2",
    "pug-cli": "github:pugjs/pug-cli#master",
    "style-loader": "^3.3.1",
    "stylelint": "^14.16.0",
    "stylelint-config-recommended": "^9.0.0",
    "stylus": "^0.59.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "yargs": "^17.6.2"
  },
  "volta": {
    "node": "18.12.1",
    "npm": "8.19.3"
  }
}
