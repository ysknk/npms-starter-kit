{
  "name": "frontend-tools",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run dev",
    "dev": "npm run watch",
    "generate": "npm run production:build --silent",
    "serv": "browser-sync start --config bs-config.js",
    "imagemin-cli": "node .cli/imagemin.js -b \"src/images/\" -d \"./dist/\"",
    "del-cli": "node .cli/del.js -d \"./dist/\"",
    "iconv-cli": "node .cli/iconv.js -d \"./dist/\"",
    "encode": "run-p encode:* --silent",
    "encode:templates": "npm run iconv-cli -- -b \"src/templates/\" -s \"**/[!_]*.pug\" -e \".html\"",
    "encode:styles": "npm run iconv-cli -- -b \"src/styles/\" -s \"**/[!_]*.pcss\" -e \".css\"",
    "encode:scripts": "npm run iconv-cli -- -b \"src/scripts/\" -s \"**/[!_]*.*\" -e \".js\"",
    "clean": "run-p clean:* --silent",
    "clean:templates": "npm run del-cli -- -b \"src/templates/\" -s \"**/[!_]*.pug\" -e \".html\"",
    "clean:styles": "npm run del-cli -- -b \"src/styles/\" -s \"**/[!_]*.pcss\" -e \".css\"",
    "clean:scripts": "npm run del-cli -- -b \"src/scripts/\" -s \"**/[!_]*.*\" -e \".js\"",
    "clean:images": "npm run del-cli -- -b \"src/images/\" -s \"**/[!_]*.*\"",
    "clean:statics": "npm run del-cli -- -b \"src/statics/\" -s \"**/[!_]*.*\"",
    "build": "run-p build:* --silent",
    "build:templates": "pug -O .pugrc.js \"src/templates\" -o \"./dist/\" -E html",
    "build:styles": "postcss \"src/styles/**/[!_]*.pcss\" --base \"./src/styles/\" --dir \"./dist/\" --ext css --verbose",
    "build:scripts": "webpack",
    "build:images": "npm run imagemin-cli -- -s \"src/images/**/[!_]*.{jpg,png,gif,svg}\"",
    "build:statics": "cpx \"src/statics/**/[!_]*\" \"./dist/\" -v",
    "watch": "run-p serv watch:*  --silent",
    "watch:templates": "npm run build:templates -- -w",
    "watch:styles": "chokidar \"src/styles/**/*\" -c \"if [[ '{event}' =~ add||change ]]; then npm run build:styles; fi;\"",
    "watch:scripts": "chokidar \"src/scripts/**/*\" -c \"if [[ '{event}' =~ add||change ]]; then npm run build:scripts; fi;\"",
    "watch:images": "chokidar \"src/images/**/*\" -c \"if [[ '{event}' =~ add||change ]]; then npm run imagemin-cli -- -s {path}; fi;\"",
    "watch:statics": "npm run build:statics -- -w --no-initial",
    "lint": "run-s lint:* --silent",
    "lint:templates": "htmlhint --config .htmlhintrc.js \"./dist/**/*.html\"",
    "lint:styles": "stylelint --config .stylelintrc.js \"./dist/**/*.css\" -f verbose --aei --color",
    "lint:scripts": "eslint -c .eslintrc.js \"./src/scripts/**/*\"",
    "production:build": "cross-env NODE_ENV=production npm run build --silent && npm run lint --silent",
    "development:build": "cross-env NODE_ENV=development npm run build --silent",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "keywords": [
    "npm-scripts"
  ],
  "author": "ysknk",
  "license": "ISC",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "vue": "^3.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@storybook/addon-actions": "^6.4.0-alpha.3",
    "@storybook/addon-controls": "^6.3.3",
    "@storybook/addon-essentials": "^6.4.0-alpha.3",
    "@storybook/addon-links": "^6.4.0-alpha.3",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.4.0-alpha.3",
    "@storybook/manager-webpack5": "^6.4.0-alpha.3",
    "@storybook/react": "^6.4.0-alpha.22",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@vue/compiler-sfc": "^3.1.4",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "chokidar": "^3.5.1",
    "chokidar-cli": "^2.1.0",
    "core-js": "^3.15.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "del": "^6.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-plugin-react": "^7.24.0",
    "glob": "^7.1.7",
    "htmlhint": "^0.15.1",
    "iconv-lite": "^0.6.3",
    "imagemin": "^8.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-csso": "^5.0.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-functions": "^4.0.2",
    "postcss-loader": "^6.1.0",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^6.7.0",
    "postcss-simple-vars": "^6.0.3",
    "process": "^0.11.10",
    "pug": "^3.0.2",
    "pug-cli": "github:pugjs/pug-cli#master",
    "pug-loader": "^2.4.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.4",
    "vue-loader": "^16.3.0",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "yargs": "^17.0.1"
  }
}
